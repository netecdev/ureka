  "private": true,
  "scripts": {
    "build": "npm run build:webpack && npm run build:server",
    "build:webpack": "NODE_ENV=production webpack  --profile --no-colors --config webpack.config.js",
    "build:server": "NODE_ENV=production babel -d dist/server/src src -s && babel -d dist/server/graphql graphql -s",
    "test": "npm run gen:graphql && flow . && helm lint helm/app",
    "dev": "npm run dev:client & npm run dev:server",
    "dev:client": "webpack-dev-server --config webpack.config.dev.js  --hot",
    "dev:server": "nodemon --exec babel-node src/server.js",
    "start": "NODE_ENV=production node dist/server/src/server.js",
    "gen:graphql-schema": "apollo-codegen introspect-schema ./graphql/schema.graphqls --output graphql/schema.graphqls.json",
    "gen:graphql-flow": "apollo-codegen generate graphql/*.graphql --schema graphql/schema.graphqls.json --target flow --output graphql/index.js",
    "gen:graphql": "npm run gen:graphql-schema && npm run gen:graphql-flow",
    "deploy": "npm run build && npm run build:docker && npm run publish:docker && npm run deploy:helm",
    "deploy:helm": "helm upgrade --wait --timeout 300 -i --set image.tag=${VERSION:-latest} --set auth0.clientId=${AUTH0_CLIENT_ID:?Missing auth0 client id} --set auth0.clientSecret=${AUTH0_CLIENT_SECRET:?Missing auth0 client secret} --set key=${APP_KEY:?Missing app key} -f ./helm/app/values.${BRANCH:?Missing branch env var}.yaml ureka-app-${BRANCH:?Missing branch env var} ./helm/app",
    "build:docker": "docker build --build-arg VERSION=${VERSION:-latest} -t ureka/ureka-app:${VERSION:-latest} .",
    "publish:docker": "docker push ureka/ureka-app:${VERSION:-latest}"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.52",
    "@babel/node": "^7.0.0-beta.52",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.52",
    "@babel/polyfill": "^7.0.0-beta.52",
    "@babel/preset-env": "^7.0.0-beta.52",
    "@babel/preset-flow": "^7.0.0-beta.52",
    "@babel/preset-react": "^7.0.0-beta.52",
    "@babel/preset-stage-0": "^7.0.0-beta.52",
    "@babel/types": "7.0.0-beta.38",
    "apollo-codegen": "^0.20.2",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-import-graphql": "^2.6.2",
    "favicons": "^5.1.1",
    "graphql-tag": "^2.9.2",
    "nodemon": "^1.17.5",
    "react-hot-loader": "^4.3.3",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8"
  }
}
